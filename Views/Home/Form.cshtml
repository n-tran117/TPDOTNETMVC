@model TPLOCAL1.Models.Information

<! DOCTYPE html>
<html>
<head>
    <title>HN - FORM</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Welcome to TP HN</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/">Home</a></li>
            <li><a href="/Home/Index/AvisList">Avis List</a></li>
        </ul>
    </nav>

    <section>
        <h1>Form</h1>
        <form asp-action="ValidationFormulaire">
            <table id="persoInfo">
                <tr>
                    <th>Personal information</th>
                </tr>
                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        <input name="Name" type="text" placeholder="your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Forename
                    </td>
                    <td>
                        <input asp-for="Forename" placeholder="your firstname" />
                        <span asp-validation-for="Forename" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Gender
                    </td>
                    <td>
                        <select asp-for="Gender">
                            <option hidden value="" disabled selected>Select your gender</option>
                            <option value="Man">Man</option>
                            <option value="Woman">Woman</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Address
                    </td>
                    <td>
                        <input asp-for="Address" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Zip code
                    </td>
                    <td>
                        <input asp-for="ZipCode" pattern="\\d{5}" name="" placeholder="example : 94700" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Town
                    </td>
                    <td>
                        <input asp-for="Town" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Email address
                    </td>
                    <td>
                        <input asp-for="Email" placeholder="yourmail@server.domain" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                </tr>
            </table>

            <table id="trainInfo">
                <tr>
                    <th>Training information</th>
                </tr>
                <tr>
                    <td>
                        Start date training
                    </td>
                    <td>
                        <input asp-for="StartDate" min="2021-01-01"/>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        Type of training
                    </td>
                    <td>
                        <input list="training" asp-for="Training" placeholder="Select a course" name="">
                        <datalist id="training">
                            <option value="Cobol Training"/>
                            <option value="Object training"/>
                            <option value="Dual Skills Training"/>
                        </datalist>
                        <span asp-validation-for="Training" class="text-danger"></span>
                    </td>
                </tr>
            </table>

            <table id="trainRev">
                <tr>
                    <th>Training Reviews</th>
                </tr>
                <tr>
                    <td>
                        Cobol Training
                    </td>
                    <td>
                        <input asp-for="CobolRev" name="" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Training Purpose
                    </td>
                    <td>
                        <input asp-for="TrainRev" name="">
                    </td>
                </tr>
            </table>

            <input type="submit" value="Validation"/>
        </form>
    </section>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
